{
  "name": "dir-emptyset",
  "version": "1.0.0",
  "private": true,
  "description": "DIR∅ – TDD microservices directory mini-project",
  "license": "MIT",
  "packageManager": "pnpm@10.23.0",
  "type": "module",
  "scripts": {
    "dev": "echo \"Use per-app dev scripts in apps/ and services/\"",
    "build": "echo \"Use per-app build scripts in apps/ and services/\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepare": "husky",
    "commit": "cz",
    "check-branch-name": "node scripts/check-branch-name.cjs",
    "prisma:generate:directory": "pnpm --filter @services/directory prisma:generate",
    "check-all": "pnpm prisma:generate:directory && pnpm lint && pnpm typecheck && pnpm format:check && pnpm check-branch-name",
    "save-changes": "pnpm format && pnpm check-all && git add . && pnpm commit && git pull origin HEAD && git push origin HEAD",
    "db:start": "node scripts/db/start.js",
    "db:stop": "node scripts/db/stop.js",
    "db:restart": "node scripts/db/restart.js",
    "db:status": "node scripts/db/status.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@eslint/js": "^9.39.1",
    "@eslint/markdown": "^7.5.1",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.0",
    "globals": "^16.5.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.0",
    "tsup": "^8.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.48.0",
    "validate-branch-name": "^1.3.2",
    "vitest": "^2.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,mjs,cjs,ts,mts,cts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,jsonc,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "validate-branch-name": {
    "pattern": "^(dev|main){1}$|^(feat|fix|chore|docs|ci|refactor|test)/[a-z0-9._-]+$",
    "errorMsg": "Invalid branch name. Use: dev, main, or feat/my-feature, fix/bug-123, chore/tooling-setup, etc."
  }
}
